<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en">

  <metal:macro define-macro="preview_meeting_item">

    <div class=""
         tal:define="review_state brain/linkedMeetingReviewState"
         tal:attributes="class string:item-preview ${review_state}"
         i18n:domain="plonemeeting.portal.core">

      <div class="item-metadata">
        <a href=""
           tal:define="utils_view nocall:context/@@utils_view;"
           tal:attributes="href python: utils_view.get_meeting_url(UID=brain.linkedMeetingUID)">
          <div class="meeting-title" tal:content="brain/linkedMeetingTitle" />
        </a>

        <div class="item-last-pm-modified"
             tal:condition='not: isAnon' >
             <span i18n:translate="Last modification in ia.Delib">Last modification in ia.Delib :</span>
             <span tal:content="brain/plonemeeting_last_modified" />
        </div>

        <div class="item-number" tal:content="brain/number" />
        <div class="item-representative" tal:content="brain/pretty_representative" />
        <div class="item-category" tal:content="nothing" />
      </div>

      <div class="item-main">
        <div class="meeting-state"
             i18n:domain="plone">
            <span tal:condition="python: review_state == 'private'"
                  i18n:translate="">Private</span>
            <span tal:condition="python: review_state == 'in_project'"
                  i18n:translate="">In project</span>
            <span tal:condition="python: review_state == 'published'"
                  i18n:translate="">Published</span>
        </div>
        <div class="public-meeting"
             i18n:translate="">Public meeting</div>
        <a href=""
           tal:attributes="href brain/getURL">
          <div class="item-title" tal:content="brain/Title" />
        </a>
      </div>

    </div>

  </metal:macro>

</html>
