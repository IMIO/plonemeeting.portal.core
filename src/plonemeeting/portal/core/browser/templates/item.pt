      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
   metal:use-macro="context/@@main_template/macros/master"
   i18n:domain="plonemeeting.portal.core">
<body>

<metal:item-title fill-slot="content-title">
</metal:item-title>

